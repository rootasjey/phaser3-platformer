{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  },
  "include": [
    "./src/**/*",
    "./tests",
    "./typings"
  ]
}
